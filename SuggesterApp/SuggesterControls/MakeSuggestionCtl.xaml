<UserControl x:Class="SuggesterControls.MakeSuggestionCtl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneAccentBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Name="_txtTitle" Text="_txtTitle" 
                   FontSize="40" />
        <Button Name="_btnSuggest" Click="_btnSuggest_Click" Grid.Row="1"
                BorderBrush="{StaticResource PhoneAccentBrush}">
            <TextBlock HorizontalAlignment="Center" 
                   Name="_txtSuggestion" Text="_txtSuggestion" 
                   VerticalAlignment="Center" FontSize="48" 
                   FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"
                   Foreground="{StaticResource PhoneForegroundBrush}" />
        </Button>
    </Grid>
</UserControl>
