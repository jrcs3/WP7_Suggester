<UserControl x:Class="SuggesterApp.TrialModeCtl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Trial Mode" FontSize="40" Grid.Row="0" />
        <StackPanel Grid.Row="1">
            <TextBlock             
                TextWrapping="Wrap" >
                Some filler text about trial mode and perhaps a games suggestion based on available lists.            
            </TextBlock>
            <TextBlock TextWrapping="Wrap">
                I could include a list of lists available in full mode.
            </TextBlock>
            <TextBlock TextWrapping="Wrap">
                Etc.
            </TextBlock>
        </StackPanel>
        <Button Grid.Row="2" Name="_btnBuyNow" Click="_btnBuyNow_Click" >Buy now</Button>
    </Grid>
</UserControl>
